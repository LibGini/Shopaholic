<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sha"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/postIma"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/idea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailsp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center|left"
                android:maxLength="100"
                android:padding="5dp"
                android:text="Sunny Day Sipping Cocktail Socks - This quirky pair of socks flaunts a lavender hue, magenta toe and heel caps, and a tropical print of sunnies and drinks in fruit, to boot. Slip into this fun footwear, and situate your schedule to island time"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pickofday"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/mytextv"
                android:padding="5dp"
                android:text="Picked For you"
                android:textColor="@color/md_white_1000" />

            <TextView
                android:id="@+id/txtpize"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="2500"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/potivereview"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Good"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>